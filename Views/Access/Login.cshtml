@model PhotoApp.Models.Felhasznalo;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

     <style>
    .login-container {
      margin-top: 5%;
    }
  </style>
</head>

<body>
    <div>
        <a asp-action="Connected">Connected?</a>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 login-container">
                <div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <div>
                        @if (ViewData["ValidateMessage"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["ValidateMessage"]
                            </div>
                        }
                    </div>
                </div>
                <form asp-controller="Access" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label">Felhasználónév</label>
                        <input type="text" asp-for="nev" class="form-control" autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jelszó</label>
                        <input type="password" asp-for="jelszo" class="form-control">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="rememberMe" class="form-check-input" checked>
                        <label class="form-check-label" for="rememberMe">Emlékezz rám</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Bejelentkezés</button>
                 
                </form>

                <div>
                    Nincs még fiókja? Az <a asp-action="Regist">alábbi linken</a> tud regisztrálni.
                </div>
                
            </div>
        </div>
    </div>
</body>
</html>
