    <thead>
        <tr>
            <th>Kategória</th>
            <th>képfeltöltések száma</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryImageCounts)
        {
            <tr>
                <td>@item.KategoriaNev</td>
                <td>@item.KepSzam</td>
            </tr>
        }
    </tbody>
</table>

