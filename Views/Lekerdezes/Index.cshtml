@model AllQueryResultsViewModel
@{
    ViewData["Title"] = "Lekerdezesek";
}

<h2>Átlagos értékelés kategóriánként</h2>
<table class="table">
    <thead>
        <tr>
            <th>Kategória</th>
            <th>Átlagos értékelés</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryRatings)
        {
            <tr>
                <td>@item.KategoriaNev</td>
                <td>@item.AtlagErtekeles</td>
            </tr>
        }
    </tbody>
</table>


